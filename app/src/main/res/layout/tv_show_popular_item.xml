<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#021330"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        app:cardBackgroundColor="#021330"
        android:id="@+id/card"
        android:layout_width="220dp"
        android:layout_height="270dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backdrop_path"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/side_nav_bar" />

            <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/vote_avarage"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/backdrop_path"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:shadowColor="@color/purple_500"
                android:shadowRadius="50"
                android:text="55"
                android:textColor="#FAF8F8"
                android:textSize="14sp" />

        </RelativeLayout>



        <TextView
            android:layout_marginStart="70dp"
            android:id="@+id/name_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"

            android:layout_marginTop="192dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/first_air_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="first_air_date"
            android:textSize="12sp"
            android:layout_marginTop="212dp"
            android:layout_marginStart="70dp" />


    </androidx.cardview.widget.CardView>

</LinearLayout>